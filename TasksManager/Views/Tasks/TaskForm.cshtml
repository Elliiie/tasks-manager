@model TasksViewModel

<form asp-action="Insert" id="form-action" method="post" role="form">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <input type="text" class="form-control" placeholder="Title" asp-for="Task.Title"/>
        <span asp-validation-for="Task.Title" class="text-danger"></span>    
    </div>
    <div class="mb-3">
        <textarea type="text" class="form-control" placeholder="Description" asp-for="Task.Description"/></textarea>
        <span asp-validation-for="Task.Description" class="text-danger"></span>    
    </div>
    <div>
        <input type="submit" class="btn btn-secondary" id="form-button" value="Add task" />
    </div>
</form>